{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx", // Important for JSX to work in React 17+
    "skipLibCheck": true
  },
  "lib": ["es2015"],
  "exclude": ["node_modules", "dist", "client"]
}
